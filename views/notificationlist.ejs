window.addEventListener("load", function() {

   // alert(window.location.href);

  var url_string = window.location.href; 
  var urls = new URL(url_string);
  var tokens = urls.searchParams.get("tokendata");
 

const url = "https://apis.tradetipsapp.com/api/adBannerUserNotificationListDetails/getAllAdBannerUserList";
fetch(url, {
  method: "POST",
  headers: {
          Authorization: 'Bearer ' + tokens,
        },
})
  .then(resp => resp.json())
    .then(function(data) {
           $('#dataTables').dataTable( {
            "aaData": data, 
            "order": [[ 3, "desc" ]],
            "columns": [
                { "data": "title"},
                { "data": "userType" },
                { "data": "description" },
                { 
                "data": "createdOn",
                 "name":"date",
                 "visible":true,
                 "title":"Date Created",
                 "render": function(data, type, full, meta){
                  if(type == "display"){
                          var date = new Date(data);
                          var options = {year: "numeric", month: "long", day: "numeric"};

                          return date.toLocaleDateString('en-US', options);
                  }

                  return data;
                }
               },
               { 'data': null,
                 'render': function (data, type, row) {
                       return '<button id="' + row.adBannerId + '" data-title="'+row.title+'" data-description="'+row.description+'" data-userType="'+row.userType+'" class="sendNotifyagain">Send Again</button>'
               }
              },    
                      
              ],
            "deferRender": true,

        });

    
  }).catch(function(error) {
    console.log(error);
  });  

   $('#dataTables').on('click', 'button.sendNotifyagain', function (e) {
    AmagiLoader.show();
  var table = $('#dataTables').DataTable();
  var row = table.row(this.closest('tr')).data();
  var bannerids = $(this).attr('id');
  // alert(bannerids);
  var title = $(this).attr('data-title');
  // alert(title);
  var description = $(this).attr('data-description');
  // alert(description);
  var filterUser = $(this).attr('data-userType');
  // alert(filterUser);

  if(title == "" || description == ""  || bannerids == ""){
    // alert("Please fill all the field");
    window.FlashMessage.error(" Please fill all the field", {timeout: 5000,});

  }else {
   
  var formdata = new FormData();
    formdata.append("title", title);
    formdata.append("description", description);
    formdata.append("addBannerSimpleIds" , bannerids);
    formdata.append("userType" , filterUser);

    var requestOptions = {
      method: 'POST',
      headers: {
              Authorization: 'Bearer ' + tokens,
            },
      body: formdata,
      redirect: 'follow'
    };

    fetch("https://apis.tradetipsapp.com/api/adBannerSimpleNotification/sendFCMNotificationForSimpleAdBannerWithUserType", requestOptions)
      .then(response => response.json())
      .then(result => {
            
                var datak = JSON.stringify(result);
               // alert(datak);
                var dataResultp = JSON.parse(datak); 
                // alert(dataResultp.title);
                // alert("Notification has been sent");
                AmagiLoader.hide();
                window.FlashMessage.success(" Notification has been sent", {timeout: 5000,});
                // window.location.reload("/notification?tokendata="+tokens); 
          

       })
      .catch(error => console.log('error', error));

}
   

 });

});





